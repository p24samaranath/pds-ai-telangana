# ── Application ────────────────────────────────────────────────────────────────
APP_NAME="PDS Optimization System"
APP_VERSION="1.0.0"
DEBUG=true
HOST=0.0.0.0
PORT=8000

# ── AI / LLM ───────────────────────────────────────────────────────────────────
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here
CLAUDE_MODEL=claude-sonnet-4-6

# ── Database ───────────────────────────────────────────────────────────────────
# SQLite (default, no setup needed):
DATABASE_URL=sqlite+aiosqlite:///./pds_optimization.db
# PostgreSQL (production):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/pds_db

# ── Redis (optional — skip for local dev) ─────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ── ML Settings ───────────────────────────────────────────────────────────────
FRAUD_ALERT_THRESHOLD=0.6
FORECAST_LOOKAHEAD_DAYS=90
MODEL_RETRAIN_THRESHOLD_MAPE=0.15

# ── Geospatial ─────────────────────────────────────────────────────────────────
MAX_ACCEPTABLE_DISTANCE_KM=5.0
